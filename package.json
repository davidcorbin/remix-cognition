{
  "name": "remix-cognition",
  "version": "1.3.1",
  "description": "CAI app from COMP350",
  "main": "js/main.js",
  "scripts": {
    "start": "electron .",
    "pretest": "standard -v | snazzy && htmlhint",
    "test": "mocha",
    "dist": "electron-builder",
    "dist-all": "electron-builder -mwl"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidcorbin/remix-cognition.git"
  },
  "author": {
    "name": "Group4",
    "email": "mph121@users.noreply.github.com"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davidcorbin/remix-cognition/issues"
  },
  "homepage": "https://github.com/davidcorbin/remix-cognition#readme",
  "devDependencies": {
    "electron": "^9.4.0",
    "electron-reload": "^1.4.0",
    "electron-builder": "^20.39.0",
    "htmlhint": "^0.11.0",
    "mocha": "^6.0.2",
    "snazzy": "^8.0.0",
    "spectron": "^5.0.0",
    "standard": "^12.0.1",
    "xvfb-maybe": "^0.2.1"
  },
  "standard": {
    "ignore": [
      "/test/*.js"
    ]
  },
  "dependencies": {
    "chart.js": "^2.7.3",
    "electron-store": "^2.0.0"
  },
  "build": {
    "appId": "com.electron.remix-cognition",
    "productName": "Remix Cognition",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      "data/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ]
    }
  }
}
